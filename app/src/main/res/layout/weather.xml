<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    android:elevation="6dp"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintWeather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardbag"
        >
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/constraintWeather"
            app:layout_constraintEnd_toEndOf="@id/constraintWeather"
            app:layout_constraintTop_toTopOf="@id/constraintWeather"
            android:text="Time"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/txtTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="20"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/txtTime"
            app:layout_constraintStart_toStartOf="@id/constraintWeather"
            app:layout_constraintEnd_toEndOf="@id/constraintWeather"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/imgViewCondition"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toBottomOf="@id/txtTemp"
            app:layout_constraintStart_toStartOf="@id/constraintWeather"
            app:layout_constraintEnd_toEndOf="@id/constraintWeather"
            android:layout_marginTop="4dp"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/txtWindSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgViewCondition"
            app:layout_constraintStart_toStartOf="@id/constraintWeather"
            app:layout_constraintEnd_toEndOf="@id/constraintWeather"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:text="13"
            android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>